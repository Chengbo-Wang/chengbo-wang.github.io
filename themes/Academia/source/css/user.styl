//customize your own CSS for page display

// Paper style
.publication-item
  display: flex
  margin-bottom: 2rem
  padding: 1.5rem
  border-left: 0px solid #ffffffff
    
  // paper thumbnail
  .pub-thumbnail
    flex-shrink: 0
    width: 160px
    margin-top: 0.4rem
    margin-right: 2.5rem
    img  
      width: 100% 
      height: auto
      object-fit: contain
      border-radius: 0px
    
  // paper info
  .pub-content  
    flex: 1
    .pub-title
      font-size: 1.8rem
      font-weight: bold
      margin-bottom: 0.5rem

    .pub-authors
      font-size: 1.4rem
      color: #666
      margin-bottom: 0.3rem

    .pub-venue
      font-style: italic
      font-size: 1.4rem
      color: #888

    .pub-links
      margin-top: 0.6rem
      display: flex
      flex-wrap: wrap
      font-size: 1.4rem
      gap: 0.2rem
      i
        margin-right: 0.35rem
      .btn
        font-size: 0.65em
        padding: 0.5em 0.8em
        line-height: 1.2
  
// Responsive design: mobile
@media (max-width: 34em)  
  .publication-item  
    flex-direction: column  
    .pub-thumbnail  
      width: 80%  
      height: auto  
      margin-right: 0  
      margin-bottom: 1rem  
        
      img  
        height: auto
        